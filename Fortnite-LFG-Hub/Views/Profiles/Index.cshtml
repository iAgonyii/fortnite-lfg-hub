
@model Fortnite_LFG_Hub.Models.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Index";
}
<h2>Create new profile</h2>
<div class="row">
    <div class="col-md-5">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <form asp-action="Index" asp-controller="Profiles" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="off" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span asp-validation-for="AchievementsEvent1" class="text-danger"></span>
                <table id="submissionTable">
                    <tr>
                        <td><b>Place</b></td>
                        <td></td>
                        <td><b>Event</b></td>
                    </tr>
                    <tr id="tablerow0">
                        <td width="135"><input type="number" min="1" asp-for="AchievementsRank1" class="form-control" /></td>
                        <td width="20"><span></span></td>
                        <td width="590"><input asp-for="AchievementsEvent1" class="form-control" /></td>
                    </tr>
                    <tr id="tablerow1">
                        <td width="135"><input type="number" min="1" asp-for="AchievementsRank2" class="form-control" /></td>
                        <td width="20"><span></span></td>
                        <td width="590"><input asp-for="AchievementsEvent2" class="form-control" /></td>
                    </tr>
                    <tr id="tablerow2">
                        <td width="135"><input type="number" min="1" asp-for="AchievementsRank3" class="form-control" /></td>
                        <td width="20"><span></span></td>
                        <td width="590"><input asp-for="AchievementsEvent3" class="form-control" /></td>
                    </tr>
                </table>
            </div>

            <div class="form-group">
                <label asp-for="Freetext" class="control-label"></label>
                <input asp-for="Freetext" class="form-control" autocomplete="off" />
                <span asp-validation-for="Freetext" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SocialURL" class="control-label"></label>
                <input asp-for="SocialURL" class="form-control" autocomplete="off" />
                <span asp-validation-for="SocialURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

