@model Fortnite_LFG_Hub.Models.ViewModels.EditProfileViewModel
@using BusinessLayer;
@{
    ViewData["Title"] = "Index";
}

<h2>Edit profile details</h2>

<div class="row">
    <div class="col-md-5">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

        <partial name="EditAchievements" , model="Model.Achievements" />

        <form asp-action="EditProfile" asp-controller="Profiles" asp-antiforgery="true">

            <div class="form-group">
                <label asp-for="Looking" class="control-label"></label>
                <input type="checkbox" asp-for="Looking" class="form-control" autocomplete="off" />
                <span asp-validation-for="Looking" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <select asp-for="Region" asp-items="@Html.GetEnumSelectList<Regions>()" class="form-control"></select>
                <span asp-validation-for=" Region" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FreeText" class="control-label"></label>
                <input asp-for="FreeText" class="form-control" autocomplete="off" />
                <span asp-validation-for="FreeText" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SocialURL" class="control-label"></label>
                <input asp-for="SocialURL" class="form-control" autocomplete="off" />
                <span asp-validation-for="SocialURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

