@model List<bool>
@using BusinessLayer;
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<form asp-controller="Home" asp-action="FilterIndex" method="get">
    @{ List<Flairs> flairs = Enum.GetValues(typeof(Flairs)).Cast<Flairs>().ToList(); }
    <table>
        <tr>
            <th>Filters</th>
        </tr>

        @for (int i = 0; i < Model.Count; i++)
        {
            string cleanFlair = flairs[i].ToString().Replace("_", " ");
            <tr>
                <td><span>@cleanFlair &nbsp;</span></td>
                <td><input type="checkbox" asp-for="@Model[i]"></td>
            </tr>
        }

        <tr>
            <td><input class="btn btn-primary btn-block btn-sm" type="submit" value="Apply filters" /></td>
        </tr>
    </table>
</form>