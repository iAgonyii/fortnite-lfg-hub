            <div class="form-group">
                <label asp-for="Looking" class="control-label"></label>
                <input type="checkbox" asp-for="Looking" class="form-control" autocomplete="off" />
                <span asp-validation-for="Looking" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
