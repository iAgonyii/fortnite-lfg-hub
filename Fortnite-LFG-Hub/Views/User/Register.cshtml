@model Fortnite_LFG_Hub.Models.LoggedInUser

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<div class="row">
    <div class="col-md-3">
        <form asp-action="Register" asp-controller="User" class="text-center">
            <h1 class="h3 mb-3 font-weight-normal">Please register</h1>
            <span asp-validation-for="Username" class="alert-danger"></span>
            <span asp-validation-for="Password" class="alert-danger"></span>
            <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            <div class="checkbox">
                <label>
                    <input type="checkbox">Remember me
                </label>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block">Create account</button>
        </form>
    </div>
</div>

