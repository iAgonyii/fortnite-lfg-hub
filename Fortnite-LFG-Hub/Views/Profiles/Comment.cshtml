@model Fortnite_LFG_Hub.ViewModels.CommentViewModel
@{
    ViewData["Title"] = "Comment";
}

<h2>Comment</h2>

<form asp-action="AddComment" asp-controller="Profiles" asp-antiforgery="true">
    <span asp-validation-for="CommentText" class="text-danger"></span>
    <table>
        <tr>
            <td width="1200px"><textarea rows="1" asp-for="CommentText" class="form-control"></textarea></td>
            <td><input type="submit" value="Post" class="btn btn-primary" /></td>
        </tr>
    </table>
</form>